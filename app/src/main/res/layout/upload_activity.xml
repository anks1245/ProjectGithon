<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/upload_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Upload File"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="23dp"
        android:layout_marginBottom="13dp"/>

    <Button
        android:id="@+id/upload_file_choose_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/upload_file"
        android:backgroundTint="#c8c8c8"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="19dp"
        android:text="Choose File"
        android:textAllCaps="false"
        android:textAlignment="viewStart"
        tools:ignore="RtlCompat"
        android:textColor="@color/black"/>
    <Button
        android:id="@+id/file_upload_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/upload_file_choose_button"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="22dp"
        android:backgroundTint="#c8c8c8"
        android:text="Upload"
        android:textAllCaps="false"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/rusume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/file_upload_button"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="23dp"
        android:text="Rusume"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginBottom="13dp" />
    <Button
        android:id="@+id/rusume_file_choose_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rusume"
        android:backgroundTint="#c8c8c8"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="19dp"
        android:text="Choose File"
        android:textAllCaps="false"
        android:textAlignment="viewStart"
        tools:ignore="RtlCompat"
        android:textColor="@color/black"/>
    <Button
        android:id="@+id/rusume_upload_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rusume_file_choose_button"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="22dp"
        android:backgroundTint="#c8c8c8"
        android:text="Upload"
        android:textAllCaps="false"
        android:textColor="@color/black"/>
</androidx.constraintlayout.widget.ConstraintLayout>