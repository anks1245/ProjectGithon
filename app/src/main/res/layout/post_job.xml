<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/company_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company Name"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="18dp"/>
    <EditText
        android:id="@+id/company_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/company_name"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="19dp"
        android:background="#c8c8c8"
        android:hint="Company Name"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image"
        app:layout_constraintTop_toBottomOf="@id/company_name_input"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/black"
        android:layout_marginLeft="18dp"
        android:textSize="15sp"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/image_choose_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image"
        android:backgroundTint="#c8c8c8"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="19dp"
        android:text="Choose Image"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:textAlignment="textStart"
        tools:ignore="RtlCompat" />
    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        app:layout_constraintTop_toBottomOf="@id/image_choose_button"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="18dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/description_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/description"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="19dp"
        android:background="#c8c8c8"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/job_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Job Type"
        app:layout_constraintTop_toBottomOf="@id/description_input"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="18dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginTop="10dp"/>
    <Spinner
        android:id="@+id/job_type_input"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/job_type"
        android:background="#c8c8c8"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="19dp"
        android:layout_marginTop="5dp"
        android:hint="FULL TIME/INTERNSHIP"
        android:textAlignment="center"
        tools:ignore="RtlCompat" />
    <TextView
        android:id="@+id/skills_required"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/job_type_input"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Skills Required"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/skills_required_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/skills_required"
        android:background="#c8c8c8"
        android:textColor="@color/black"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="19dp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/job_validity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/skills_required_input"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Job Valid Upto"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/job_validity_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/job_validity"
        android:background="#c8c8c8"
        android:textColor="@color/black"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="19dp"
        android:layout_marginTop="5dp"/>
    <Button
        android:id="@+id/post_job"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white"
        android:text="Post Job"
        android:textSize="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>